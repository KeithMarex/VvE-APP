{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2020"],
      "baseUrl": "./",
      "target": "ES2020",
      "module": "ES2020",
      "moduleResolution": "node",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "typeRoots": ["node_modules/@types"]
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules"
    ]
}
