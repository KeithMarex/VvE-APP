{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["ES2020"],
      "baseUrl": "./",
      "skipLibCheck": true,
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "rootDir": "./",
      "outDir": "./build",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": false,
      "typeRoots": ["node_modules/@types"],
      "paths": {
        "~/*": ["./*"]
      }
    },
    "include": [
        "./"
    ],
    "exclude": [
        "node_modules"
    ],
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
}
